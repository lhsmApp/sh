<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="PesoInfoMapper">
	
	<!--表名 -->
	<sql id="tableName">
		tb_peso_info
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		PESO_NAME,	
		ESTA_TIME,	
		BELONG_AREA,	
		USCC,	
		HEAD_NAME,	
		HEAD_TEL,	
		E_MAIL,	
		OFFICE_TEL,	
		OFFICE_ADDR,	
		FAX,	
		PESO_INTR,	
		REGI_CAPI,	
		STATE,	
		GEOG_COOR,	
		REMARK
	</sql>
	<sql id="SelectField">
	    ID,
		PESO_NAME,	
		ESTA_TIME,	
		BELONG_AREA,	
		USCC,	
		HEAD_NAME,	
		HEAD_TEL,	
		E_MAIL,	
		OFFICE_TEL,	
		OFFICE_ADDR,	
		FAX,	
		PESO_INTR,	
		REGI_CAPI,	
		STATE,	
		GEOG_COOR,	
		REMARK
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{PESO_NAME},	
		#{ESTA_TIME},	
		#{BELONG_AREA},	
		#{USCC},	
		#{HEAD_NAME},	
		#{HEAD_TEL},	
		#{E_MAIL},	
		#{OFFICE_TEL},	
		#{BETT_ADDR},	
		#{FAX},	
		#{PESO_INTR},	
		#{REGI_CAPI},	
		#{STATE},	
		#{GEOG_COOR},	
		#{REMARK}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			ID = #{ID};
		<!-- delete from tb_pesoact_info where PESO_NAME = #{ID};
		delete from tb_pesoorg_info where PESO_NAME = #{ID}; -->
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			PESO_NAME = #{PESO_NAME},
			ESTA_TIME = #{ESTA_TIME},
			BELONG_AREA = #{BELONG_AREA},
			USCC = #{USCC},
			HEAD_NAME = #{HEAD_NAME},
			HEAD_TEL = #{HEAD_TEL},
			E_MAIL = #{E_MAIL},
			OFFICE_TEL = #{OFFICE_TEL},
			OFFICE_ADDR = #{BETT_ADDR},
			FAX = #{FAX},
			PESO_INTR = #{PESO_INTR},
			REGI_CAPI = #{REGI_CAPI},
			STATE = #{STATE},
			GEOG_COOR = #{GEOG_COOR},
			REMARK = #{REMARK}
		where ID = #{ID};
		<!-- update tb_pesoact_info set PESO_NAME = #{PESO_NAME} where PESO_NAME = #{ID};
		update tb_pesoorg_info set PESO_NAME = #{PESO_NAME} where PESO_NAME = #{ID}; -->
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="SelectField"></include>
		from 
		<include refid="tableName"></include>
		where 
			ID = #{ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="SelectField"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				ID LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				or
				PESO_NAME LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				or
				HEAD_NAME LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				or
				OFFICE_ADDR LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				)
		</if>
		<if test="pd.STATE != null and pd.STATE != ''"><!-- 状态检索 -->
			and STATE = #{pd.STATE} 
		</if>
		order by ID DESC
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="SelectField"></include>
		from 
		<include refid="tableName"></include>
		order by ID DESC
	</select>
	
	<!-- 通过编码获取数据 -->
	<select id="hasDuplicateRecord" parameterType="pd" resultType="pd">
		select 
		<include refid="SelectField"></include>
		from 
		<include refid="tableName"></include>
		where 
			ID != #{ID}
	    and 
			PESO_NAME = #{PESO_NAME}
	</select>
	
	<select id="listDic" parameterType="pd" resultType="pd">
		select ID, PESO_NAME
		from 
		<include refid="tableName"></include>
		<where>
		    <if test="BELONG_AREA!=null and BELONG_AREA!=''">
		        and BELONG_AREA=#{BELONG_AREA}
		    </if>
		</where>
		order by ID DESC
	</select>
	
	<!-- 列表(第一条)根据条件搜索 -->
	<select id="queryListByCondition" parameterType="pd" resultType="pd">
		select
		<include refid="SelectField"></include>
		from 
		<include refid="tableName"></include>
		<where >
			<if test="keywords!= null and keywords != ''"><!-- 关键词检索 -->
			    and
				    (
				    	OFFICE_ADDR LIKE CONCAT(CONCAT('%', #{keywords}),'%')
			    	)
			</if>
			<if test="BELONG_AREA != null and BELONG_AREA != ''"><!-- 所在区域 -->
				and BELONG_AREA=#{BELONG_AREA} 
			</if>
			<if test="ID != null and ID != ''"><!-- 投注站编码 -->
				and ID=#{ID} 
			</if>
		</where>
		order by ID DESC
	    <!-- LIMIT 1 -->
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>;
		<!-- delete from tb_pesoact_info where PESO_NAME in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>; -->
		<!-- delete from tb_pesoorg_info where PESO_NAME in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>; -->
	</delete>

</mapper>