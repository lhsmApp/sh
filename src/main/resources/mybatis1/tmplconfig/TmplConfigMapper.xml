<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="TmplConfigMapper">
	
	<!--表名 -->
	<sql id="tableName">
		TB_TMPL_CONFIG_DETAIL
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		DEPT_CODE,	
		TABLE_CODE,	
		COL_CODE,	
		COL_NAME,	
		DISP_ORDER,	
		DICT_TRANS,	
		COL_HIDE,	
		COL_SUM,	
		COL_AVE,	
		TMPLCONFIG_ID
	</sql>
	<sql id="FieldColumns">
		DEPT_CODE,	
		TABLE_CODE,	
		COL_CODE,	
		COL_NAME,	
		DISP_ORDER,	
		DICT_TRANS,	
		COL_HIDE,	
		COL_SUM,	
		COL_AVE
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{DEPT_CODE},	
		#{TABLE_CODE},	
		#{COL_CODE},	
		#{COL_NAME},	
		#{DISP_ORDER},	
		#{DICT_TRANS},	
		#{COL_HIDE},	
		#{COL_SUM},	
		#{COL_AVE},	
		#{TMPLCONFIG_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			TMPLCONFIG_ID = #{TMPLCONFIG_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			DEPT_CODE = #{DEPT_CODE},
			TABLE_CODE = #{TABLE_CODE},
			COL_CODE = #{COL_CODE},
			COL_NAME = #{COL_NAME},
			DISP_ORDER = #{DISP_ORDER},
			DICT_TRANS = #{DICT_TRANS},
			COL_HIDE = #{COL_HIDE},
			COL_SUM = #{COL_SUM},
			COL_AVE = #{COL_AVE},
		TMPLCONFIG_ID = TMPLCONFIG_ID
		where 
		TMPLCONFIG_ID = #{TMPLCONFIG_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			TMPLCONFIG_ID = #{TMPLCONFIG_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			TMPLCONFIG_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- 根据当前单位编码及表名获取字段配置信息 -->
	<select id="listNeed" parameterType="com.fh.entity.TmplConfigDetail" 
	        resultType="com.fh.entity.TmplConfigDetail">
		select
		    <include refid="FieldColumns"></include>
		from 
		    <include refid="tableName"></include>
		where DEPT_CODE = #{DEPT_CODE}
	    and TABLE_CODE = #{TABLE_CODE}
	    order by DISP_ORDER
	</select>
	
	<!-- fh313596790qq(青苔) -->
</mapper>